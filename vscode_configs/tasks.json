{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build qtd1",
            "type": "shell",
            "command": "make -j 99 --directory=${workspaceFolder}/build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run qtd1",
            "type": "shell",
            "command": "${workspaceFolder}/build/qtd1",
            "problemMatcher": "$gcc"
        },
        {
            "label": "mpq viewer",
            "type": "shell",
            "command": "${workspaceFolder}/build/qtd1 --viewer",
            "problemMatcher": "$gcc"
        }
    ]
}
